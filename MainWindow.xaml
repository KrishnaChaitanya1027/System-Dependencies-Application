<Window x:Class="System_Dependencies___Final_Assignment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System_Dependencies___Final_Assignment"
        mc:Ignorable="d"
        Title="System Dependencies" Height="450" Width="800">
    <!--Group 5: Sairam Ganesh Yedida Harivenkata,Nikitaben Jashvantsinh Raj,Krishna Chaitanya Potharaju-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Row="0" Grid.ColumnSpan="2" ItemsSource="{Binding Items}" Margin="5" FontSize="20" ></ListBox>
        <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding Text}" Margin="5" FontSize="20" VerticalContentAlignment="Center"></TextBox>
        <Button Name="Query" Grid.Row="1" Grid.Column="1" Margin="5" FontSize="20" Content="Submit Query" Click="Query_Click"></Button>
    </Grid>
</Window>
